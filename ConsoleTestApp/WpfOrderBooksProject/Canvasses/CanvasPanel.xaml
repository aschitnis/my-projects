<Window x:Class="WpfOrderBooksProject.Canvasses.CanvasPanel"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfOrderBooksProject.Canvasses"
        mc:Ignorable="d"
        Title="CanvasPanel" Height="400" Width="525">
    <Grid Background="Aqua">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <Canvas Grid.Column="0" Grid.Row="0">
            <Button Background="LightBlue" Canvas.Top="20" Canvas.Left="20" Content="Left/Top" Padding="5" />
            <Button Background="LightBlue" Canvas.Bottom="20" Canvas.Left="20" Content="Left/Bottom" Padding="5" />
            <Button Background="LightBlue" Canvas.Top="20" Canvas.Right="20" Content="Right/Top" Padding="5" />
            <Button Background="LightBlue" Canvas.Bottom="20" Canvas.Right="20" Content="Right/Bottom" Padding="5" />
        </Canvas>
    </Grid>

</Window>
