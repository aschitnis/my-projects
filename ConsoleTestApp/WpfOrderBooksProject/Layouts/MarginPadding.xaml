<Window x:Class="WpfOrderBooksProject.Layouts.MarginPadding"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfOrderBooksProject.Layouts"
        mc:Ignorable="d"
        Title="MarginPadding" Height="350" Width="525">
    <Canvas>
        <Border BorderBrush="Black" BorderThickness="2" Margin="2">
            <Label Margin="5" Padding="0" Background="DarkBlue" Foreground="White">
                <Label.Content>
                    <Grid Background="DarkCyan" Margin="5">
                        <Button Background="Orange" Foreground="DarkBlue" Margin="5" Padding="5">Henri Seux</Button>
                    </Grid>
                </Label.Content>
            </Label>
        </Border>

    </Canvas>
</Window>
