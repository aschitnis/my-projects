<Window x:Class="WpfOrderBooksProject.Layouts.Visibility"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfOrderBooksProject.Layouts"
        mc:Ignorable="d"
        Title="Visibility" Height="350" Width="525">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="158*"/>
            <RowDefinition Height="161*"/>
        </Grid.RowDefinitions>

        <StackPanel Height="75" Background="Orange" Grid.Row="0">
            <Button Visibility="Collapsed" Content="Collpsed"/>
            <Button>This button is below a collapsed button</Button>
            <Button Visibility="Collapsed" Content="Collpsed"/>
            <Button>This second-button is below a collapsed button</Button>
        </StackPanel>

        <StackPanel Height="75" Background="Orange" Grid.Row="1">
            <Button Visibility="Hidden" Content="Hidden"/>
            <Button>This button is below a hidden button</Button>
        </StackPanel>
    </Grid>
</Window>
