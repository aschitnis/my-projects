<Window x:Class="WpfOrderBooksProject.Layouts.ContentAlignment"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfOrderBooksProject.Layouts"
        mc:Ignorable="d"
        Title="ContentAlignment" Height="400" Width="525">
    <Grid>
        <StackPanel >
            <Button Padding="5" Margin="5" HorizontalContentAlignment="Left" Height="75" VerticalContentAlignment="Stretch" Background="Yellow" FontSize="22" Content="Stretch"/>
            <Button Padding="5" Margin="5" HorizontalContentAlignment="Left" VerticalContentAlignment="Bottom" Height="75" Background="Yellow" FontSize="22" Content="Left"/>
            <Button Padding="5" Margin="5" HorizontalContentAlignment="Right" VerticalContentAlignment="Top" Height="75" Background="Yellow" FontSize="22" Content="Right"/>
            <Button Padding="5" Margin="5"  HorizontalAlignment="Center" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" Height="75" Background="Yellow" FontSize="22" Content="Center"/>
        </StackPanel>
    </Grid>
</Window>
