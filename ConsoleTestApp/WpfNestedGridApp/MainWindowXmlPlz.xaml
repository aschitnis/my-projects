<Window x:Class="WpfNestedGridApp.MainWindowXmlPlz"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfNestedGridApp"
        mc:Ignorable="d"
        Title="MainWindowXmlPlz" Height="450" Width="800">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="100"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="9*" />
        </Grid.RowDefinitions>

        <Button Content="Anzeigen" Grid.Row="0" Grid.Column="0" Margin="4"/>
        <Button Content="Löschen" Grid.Row="1" Grid.Column="0" Margin="4"/>
        
        
    </Grid>
</Window>
